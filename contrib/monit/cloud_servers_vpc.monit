# an example Monit configuration file for delayed_job

check process delayed_job
  with pidfile /opt/cloud-servers-vpc/tmp/pids/delayed_job.0.pid
  start program = "/usr/bin/env RAILS_ENV=production /usr/bin/rails-stack-ruby /opt/cloud-servers-vpc/script/delayed_job start -n 2"
  stop program = "/usr/bin/cloud-servers-vpc-stop-dj"
